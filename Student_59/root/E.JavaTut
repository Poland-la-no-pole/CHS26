const int RED = 8;
const int YELLOW = 9;
const int YELLOW = 9;
const int GREEN = 10;
const int GREEN = 10;
void setup() {
void setup() {
 pinMode(RED, OUTPUT);
 pinMode(RED, OUTPUT);
 pinMode(YELLOW, OUTPUT);
 pinMode(YELLOW, OUTPUT);
 pinMode(GREEN, OUTPUT);
 pinMode(GREEN, OUTPUT);
}
}
void loop() {
